        icon: grafana
        server: monitoring.vojak.cloud
        container: grafana
        widget:
            type: grafana
            url: http://{{ hostvars['monitoring.vojak.cloud'].ansible_host }}:{{ grafana_port }}
            username: {{ grafana_admin_user }}
            password: {{ grafana_admin_password }}
    - Uptime Kuma:
        href: http://{{ hostvars['monitoring.vojak.cloud'].ansible_host }}:{{ uptime_kuma_port }}
        ping: http://{{ hostvars['monitoring.vojak.cloud'].ansible_host }}:{{ uptime_kuma_port }}
