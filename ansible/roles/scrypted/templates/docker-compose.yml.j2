---
version: '3.3'
services:
  scrypted:
    image: "koush/scrypted:{{ scrypted_version }}"
    container_name: scrypted
    restart: always
    network_mode: host
    volumes:
      - "{{ scrypted_volume_dir }}:/server/volume"
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "10"